ul.hunts-list
  li ng-repeat="hunt in hunts"
    .details
      h2
        a ui-sref="hunts.view({huntID: hunt.id})"
          | {{hunt.name}}

    .users
      a[
        ui-sref="users.view({userID: user.id})"
        ng-repeat="user in hunt.users"
      ]
        img ng-src="{{user.picture}}" title="{{user.firstName}}"

    google-map area="hunt.area"

  li.starter ui-sref="hunts.create"
    i.fa.fa-lg.fa-plus
    |  New Hunt

