ul.hunts-list
  li ng-repeat="hunt in hunts"
    .details ui-sref="hunts.show({id: hunt.id})"
      h2
        | {{hunt.name}}

    .users
      a[
        ui-sref="users.show({id: user.id})"
        ng-repeat="user in hunt.users"
      ]
        img ng-src="{{user.picture}}" title="{{user.firstName}}"

    google-map area="hunt.area"

  li.starter ui-sref="hunts.new"
    i.fa.fa-lg.fa-plus
    |  New Hunt

